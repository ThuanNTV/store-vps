<form class="box mt-4" style="outline: #4CAF50 solid 2px" method="POST" action="/vps/lib">
    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label">Tên máy: </label>
        </div>
        <div class="field-body">
            <div class="field">
                <p class="control is-expanded has-icons-left">
                    <input class="input" type="text" placeholder="Nhập tên của VPS" id="name" name="name" required />
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                </p>
            </div>

            <div class="field has-addons has-addons-centered">
                <div class="field-label is-normal">
                    <label class="label">Giá tiền: </label>
                </div>
                <p class="control">
                    <input class="input" type="text" placeholder="Nhập giá tiền" id="price" name="price" />
                </p>
                <p class="control">
                    <span class="select">
                        <select id="Donvi" name="Donvi">
                            <option value="VNĐ">VNĐ</option>
                            <option value="$">$</option>
                        </select>
                    </span>
                </p>
            </div>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label">Cấu hình: </label>
        </div>
        <div class="field-body">
            <div class="column">
                <div class="field is-narrow">
                    <div class="control">
                        <div class="select is-fullwidth">
                            <select id="cpu" name="cpu">
                                <option value="CPU">CPU</option>
                                <option>Marketing</option>
                                <option>Sales</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="field is-narrow">
                    <div class="control">
                        <div class="select is-fullwidth">
                            <select id="memory" name="memory">
                                <option value="MEMORY">MEMORY</option>
                                <option>Marketing</option>
                                <option>Sales</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="field is-narrow">
                    <div class="control">
                        <div class="select is-fullwidth">
                            <select id="ssd" name="ssd">
                                <option value="Disk SSD">Disk SSD</option>
                                <option>Marketing</option>
                                <option>Sales</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{! <div class="field is-horizontal">
        <div class="field-label">
            <label class="label">Already a member?</label>
        </div>
        <div class="field-body">
            <div class="field is-narrow">
                <div class="control">
                    <label class="radio">
                        <input type="radio" name="member">
                        Yes
                    </label>
                    <label class="radio">
                        <input type="radio" name="member">
                        No
                    </label>
                </div>
            </div>
        </div>
    </div> }}

    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label">Khu vực: </label>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <input class="input is-danger" type="text" placeholder="Nhập khu vực của VPS" id="local"
                        name="local" />
                </div>
                <p class="help is-danger">
                    This field is required
                </p>
            </div>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label">Ghi chú: </label>
        </div>
        <div class="field-body">
            <div class="field is-half">
                <div class="control">
                    <textarea class="textarea" placeholder="Nhập ghi chú cho VPS" id="desc" name="desc"></textarea>
                </div>
            </div>
            <div class="field">
                <div class="file is-normal has-name">
                    <label class="file-label">
                        <figure class="image is-128x128 ml-6 mr-4">
                            <img src="https://bulma.io/images/placeholders/128x128.png" />
                        </figure>
                        <input class="file-input" type="file" name="image" />
                        <span class="file-cta">
                            <span class="file-icon">
                                <i class="fas fa-upload"></i>
                            </span>
                            <span class="file-label">
                                Normal file…
                            </span>
                        </span>
                        <span class="file-name">
                            image.png
                        </span>
                        <span class="label ml-4 mt-2">
                            -> Hình ảnh
                        </span>
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="field is-horizontal">
        <div class="field-label">
            <!-- Left empty for spacing -->
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <button class="button is-primary">
                        Lưu
                    </button>
                    <button class="button is-success is-light">Lưu theo danh sách</button>
                </div>
            </div>
        </div>
    </div>
</form>